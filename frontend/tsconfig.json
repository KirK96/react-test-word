{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "target": "es2015",
    "noUnusedLocals": true,
    "lib": [
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/core/backend/*"
  ],
}