{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "outDir": "./build/",
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noErrorTruncation": true,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": false,
    "target": "esnext",
    "noUnusedLocals": true,
    "noEmit": true,
    "lib": ["es6", "es7", "esnext", "dom"],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["app/*"]
    }
  },
  "include": ["app/**/*"]
}
